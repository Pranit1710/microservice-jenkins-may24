
pipeline {
    agent any
    stages {
        stage('Install Python and Flask') {
            steps {
                script {
                    // Update the package list
                    sh '''
                    sudo apt-get update
                    sudo apt-get -y upgrade
                    '''

                    // Install Python and pip
                    sh '''
                    sudo apt-get install -y python3 python3-pip
                    '''

                    // Install Flask using pip
                    sh '''
                    pip3 install Flask
                    '''

                    // Verify Python, pip, and Flask installation
                    sh 'python3 --version'
                    sh 'pip3 --version'
                    sh 'python3 -m flask --version'
                }
            }
        }
    }
}
